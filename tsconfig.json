        "noEmitOnError": true,
        // "outDir": "dist",
        // "outFile": "dist/aa.js",
        // "allowJs": false,
        // "removeComments": true,
        // "noEmit": false,
        // "noEmitOnError": true,
        // 所有严格检查的总开关
        "strict": true,
        // "alwaysStrict": true,
        // "noImplicitAny": true,
        // "noImplicitThis": true,
        // "strictNullChecks": true,
    }
}