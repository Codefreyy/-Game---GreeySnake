    "include": [
        "./src/**/*" //编译src下的文件，src如果不存在就会报错
    ],
    //不包含哪些文件
    // "exclude": [
    //     "./src/hello/**/*" //hello下面的文件不需要被编译
    // ],
    "complierOptions": {
        "target": "es2017",
        "module": "es6",
        "lib": [
            "ES6",
            "DOM"
